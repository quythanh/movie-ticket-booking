<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/round_border_red_border"
    android:backgroundTint="#FFE9C5">


    <TextView
        android:background="@drawable/round_border_red_border"
        android:id="@+id/ticketShowTime"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="13:20"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_weight="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ticketMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/ticketShowDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textStyle="italic"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/textView34"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày đặt" />
        <TextView
            android:id="@+id/ticketCreadtedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày đặt" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái:" />
        <TextView
            android:id="@+id/ticketStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐÃ ĐẶT"
            android:textColor="@color/design_default_color_error"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ticketMovieImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/combo" />
    </LinearLayout>


</LinearLayout>